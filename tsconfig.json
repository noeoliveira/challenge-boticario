{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",

    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,

    "moduleResolution": "node",

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "coverage", "__tests__", "jest.*"]
}
