{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",

    "strict": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@api": ["api/"],
      "@api/*": ["api/*"],
      "@application": ["application/"],
      "@application/*": ["application/*"],
      "@domain": ["domain/"],
      "@domain/*": ["domain/*"],
      "@infra": ["infra/"],
      "@infra/*": ["infra/*"],
      "@shared": ["shared/"],
      "@shared/*": ["shared/*"],
      "@test": ["__tests__/"],
      "@test/*": ["__tests__/*"],
      "@root": ["./"],
      "@root/*": ["./*"]
    },
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "coverage", "__tests__", "jest.*"]
}
